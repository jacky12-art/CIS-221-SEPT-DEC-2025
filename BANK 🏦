   "source": [
    "import numpy as np\n",
    "\n",
    "# =========================\n",
    "# 1. Create a 2D NumPy array (4 branches Ã— 6 months)\n",
    "# =========================\n",
    "\n",
    "# Example transaction volumes (you can replace with real data)\n",
    "transactions = np.array([\n",
    "    [1200, 1350, 1600, 1550, 1700, 1800],   # Branch 1\n",
    "    [1500, 1400, 1450, 1600, 1750, 1900],   # Branch 2\n",
    "    [1100, 1150, 1200, 1300, 1400, 1500],   # Branch 3\n",
    "    [1800, 1750, 1900, 2000, 2100, 2200]    # Branch 4\n",
    "])\n",
    "\n",
    "print(\"1. Transaction Volume Array (4x6):\\n\", transactions)\n",
    "\n",
    "# =========================\n",
    "# 2. Total transactions per branch\n",
    "# =========================\n",
    "total_per_branch = np.sum(transactions, axis=1)\n",
    "print(\"\\n2. Total Transactions per Branch:\\n\", total_per_branch)\n",
    "\n",
    "# =========================\n",
    "# 3. Branch with the highest total transactions\n",
    "# =========================\n",
    "highest_branch_index = np.argmax(total_per_branch)\n",
    "print(\"\\n3. Branch with Highest Transactions: Branch\", highest_branch_index + 1)\n",
    "\n",
    "# =========================\n",
    "# 4. Average monthly transaction volume across all branches\n",
    "# =========================\n",
    "average_monthly = np.mean(transactions)\n",
    "print(\"\\n4. Average Monthly Transaction Volume Across All Branches:\\n\", average_monthly)\n",
    "\n",
    "# =========================\n",
    "# 5. Reshape to 3x8 and implications\n",
    "# =========================\n",
    "reshaped_array = transactions.reshape(3, 8)\n",
    "print(\"\\n5. Reshaped Array (3x8):\\n\", reshaped_array)\n",
    "\n",
    "print(\"\\nImplication:\")\n",
    "print(\"Reshaping changes only the *structure* of the data, not the values.\")\n",
    "print(\"The logical meaning of branches vs months is lost when reshaping,\")\n",
    "print(\"so the 3x8 format no longer represents branches or months clearly.\")\n"
   ]
  },
